<!-- button_round_trip_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" /> <!-- Radio de las esquinas -->
            <solid android:color="@color/colorAccent" /> <!-- Color de fondo cuando está presionado -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="4dp" /> <!-- Radio de las esquinas -->
            <solid android:color="@android:color/transparent" /> <!-- Color de fondo predeterminado -->
            <stroke
                android:width="1dp"
                android:color="@android:color/darker_gray" /> <!-- Borde cuando no está presionado -->
        </shape>
    </item>
</selector>
