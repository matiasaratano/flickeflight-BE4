<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f5f5">


    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#ffffff">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/hamburger_icon"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="151.7dp"
            android:layout_height="27.9dp"
            android:src="@drawable/fickle_flight"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/more_vert"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/picture_profile"
            android:contentDescription="@string/more_options"
            android:layout_gravity="end|center_vertical" />
    </LinearLayout>

    <!-- Paris Card -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/paris_card"
        android:gravity="center_horizontal|bottom"
        android:paddingHorizontal="20dp"
        android:paddingVertical="14dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:fontFamily="@font/inter"
            android:text="FROM"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintStart_toStartOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="320dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/inter_bold"
            android:text="$1299"
            android:textColor="#ffffff"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="316dp"
            android:fontFamily="@font/inter_bold"
            android:text="Paris"
            android:textColor="#ffffff"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintVertical_bias="0.227" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/heart_selector"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Categories -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/tag_flight" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:text="Flight"
                android:textColor="#191919"
                android:textSize="14sp"
                android:textStyle="normal" />
        </LinearLayout>
    </LinearLayout>

    <!-- Trending Destinations Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#191919"
            android:text="Trending Destinations" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:textStyle="normal"
            android:textSize="14sp"
            android:textColor="#1262ae"
            android:text="See all" />
    </LinearLayout>

    <!-- Destination Cards -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="610dp"
            android:layout_height="164dp"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- Destination Card -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="131dp"
                    android:layout_height="89.7dp"
                    android:src="@drawable/d_boracay" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_semibold"
                    android:textColor="#191919"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    tools:text="Boracay" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:textColor="#7e8b97"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    tools:text="Philippines" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="131dp"
                    android:layout_height="89.7dp"
                    android:src="@drawable/d_baros"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_semibold"
                    android:textColor="#191919"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    tools:text="Baros" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:textColor="#7e8b97"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    tools:text="Maldives" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="131dp"
                    android:layout_height="89.7dp"
                    android:src="@drawable/d_bali" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_semibold"
                    android:textColor="#191919"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    tools:text="Bali" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:textColor="#7e8b97"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    tools:text="Indonesia" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="131dp"
                    android:layout_height="89.7dp"
                    android:src="@drawable/d_palawan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_semibold"
                    android:textColor="#191919"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    tools:text="Palawan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:textColor="#7e8b97"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    tools:text="Philippines" />
            </LinearLayout>
        </LinearLayout>




        <!-- Offers Section -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:lineSpacingExtra="8sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="#191919"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Offers" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- Example Offer Card -->
            <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_package_item_offers"
                android:layout_width="264dp"
                android:layout_height="86dp"
                android:layout_margin="8dp"
                android:backgroundTintMode="add"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/discount_master"
                        android:layout_width="136dp"
                        android:layout_height="38dp"
                        android:textSize="12sp"
                        android:text="20% discount for mastercard users"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.862"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textColor="@color/black"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageView
                    android:id="@+id/credit_card_master"
                    android:layout_width="74dp"
                    android:layout_height="51dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"

                    app:srcCompat="@drawable/mastercard" />

                <TextView
                    android:id="@+id/description_offer"
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="110dp"
                    android:layout_marginTop="45dp"
                    android:text="@string/limited_time"
                    android:textColor="@color/gris"
                    android:textSize="12sp" />

            </androidx.cardview.widget.CardView>

            <!-- Example Offer Card -->
            <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_package_item_offers_2"
                android:layout_width="264dp"
                android:layout_height="86dp"
                android:layout_margin="8dp"
                android:backgroundTintMode="add"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/discount"
                        android:layout_width="136dp"
                        android:layout_height="38dp"
                        android:textSize="12sp"
                        android:text="@string/discount_visa_simp"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.862"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textColor="@color/black"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageView
                    android:id="@+id/credit_card"
                    android:layout_width="74dp"
                    android:layout_height="51dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"

                    app:srcCompat="@drawable/visa" />

                <TextView
                    android:id="@+id/description"
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="110dp"
                    android:layout_marginTop="45dp"
                    android:text="@string/limited_time"
                    android:textColor="@color/gris"
                    android:textSize="12sp" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        </LinearLayout>


    <!-- Bottom Tab -->

</LinearLayout>
