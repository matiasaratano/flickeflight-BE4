<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="16dp"
    android:background="@color/windowBackground">

    <ImageView
        android:id="@+id/drawer_profile_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/picture_profile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/drawer_hello"
        android:layout_width="28dp"
        android:layout_height="18dp"
        android:text="Hello"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:textColor="#7E8B97"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/drawer_profile_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/drawer_name"/>

    <TextView
        android:id="@+id/drawer_name"
        android:layout_width="132dp"
        android:layout_height="30dp"
        android:text="Macy Johnson"
        android:textColor="@color/textColor"
        android:textSize="20sp"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/drawer_profile_image"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>